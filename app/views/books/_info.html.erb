<div class="col-xs-3">
  <h2>User info</h2>
  <table class="table">
    <tbody>
      <tr>
        <th>
          <%= attachment_image_tag @user, :profile_image, size: '100x100', fallback: "no_image.jpg" %>
        </th>
      </tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
  </div>
  <h2>New Book</h2>
  <%= form_for(book) do |f| %>
    <h4>Title</h4>
    <div class="row field">
      <%= f.text_field :title, class: "col-xs-12" %>
    </div>
    <h4>Opinion</h4>
    <div class="row field">
      <%= f.text_area :body, class: "col-xs-12" %>
    </div>
    <div class="row action">
      <%= f.submit "Create Book", class: "col-xs-12 btn btn-primary" %>
    </div>
  <% end %>
</div>
