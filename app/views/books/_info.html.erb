
<div class="col-xs-3">
  <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, size: '100x100', fomat: 'jpeg', fallback: 'no_image.jpg' %>
    <div class="row">
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= link_to "", edit_user_path(current_user.id), class: "glyphicon glyphicon-wrench col-xs-12 btn btn-default" %>
    </div>

  <h2>New book</h2>
  <%= form_for(book) do |f| %>
    <div class="field row">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class: "col-xs-12" %>
    </div>
    <div class="field row">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body, class: "col-xs-12" %>
    </div>
    <div class="actions row">
      <%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
    </div>
  <% end %>
</div>
